<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quantumman.randomgoals">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.quantumman.randomgoals.app.ui.activities.ChoosingNewIconForListName" />
        <activity
            android:name="com.quantumman.randomgoals.app.ui.activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.quantumman.randomgoals.app.ui.activities.EditItemsListActivity"
            android:label="Edit Goals"
            android:parentActivityName="com.quantumman.randomgoals.app.ui.activities.ListGoalsActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.quantumman.randomgoals.app.ui.activities.ListGoalsActivity" />
        </activity>
        <activity
            android:name="com.quantumman.randomgoals.app.ui.activities.ListGoalsActivity"
            android:screenOrientation="portrait" />

        <provider
            android:name=".data.providers.GoalsContentProvider"
            android:authorities="com.quantumman.randomgoals"
            android:exported="false" />
    </application>

</manifest>