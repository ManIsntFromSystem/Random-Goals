<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iconItemGoalsList"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart = "22dp"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/desc_icon_new_item_goal"
                    android:src="@drawable/ic_purpose"
                    android:tag="ic_purpose"/>
                <TextView
                    android:id="@+id/tvNameListGoal"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginStart="8dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/iconItemGoalsList"
                    android:textSize="22sp"
                    android:gravity="center"/>

        </RelativeLayout>

</androidx.cardview.widget.CardView>