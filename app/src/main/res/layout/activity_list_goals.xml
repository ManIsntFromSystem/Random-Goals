<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_list_goals"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.activities.ListGoalsActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewListGoals"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addNewGoalFltActBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        android:onClick="addNewListGoalsFloatBtn"
        android:backgroundTint="@color/colorPrimaryDark_12"
        app:maxImageSize="32dp"
        app:srcCompat="@drawable/add_1"/>
</RelativeLayout>